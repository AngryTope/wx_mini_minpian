.page{
  background-color: #EEE;
}
/*图片滑动*/
.swiper{
  width: 100%;
  height: 350px;
}
.swiperImg{
  width: 100%;
}
.swiperImgView{
  width: 100%;
}
/*商品价格信息*/
.goodPriceInfo{
  position: relative;
  padding:5px 0 10px 10px;
  background-color: white;
}
.goodName{
  display: block;
  font-size: 16px;
  margin-bottom: 10px;
}
.discountPrice{
  font-size: 20px;
  color: red;
  margin-right: 10px;
}
.goodPrice{
  font-size: 11px;
  text-decoration: line-through;
  color:rgb(120, 120, 120);
  margin-right: 10px;
}
.goodSalesVolume{
  font-size: 12px;
  color:rgb(120, 120, 120);
}
/*商品详情*/
.goodDetailInfo{
  background-color: white;
  margin-top: 10px;
  padding-top: 5px;
}
.txtGoodDetailInfo{
  display: block;
  font-size: 16px;
}
.goodImages{
  text-align:center;
  margin-top:5px;
}
.itemImage{
  width: 100%;
}
/*底部固定菜单*/
.fixedMenu{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  padding: 0;
  height: 50px;
}
.imgIcon{
  width: 25px;
  height: 25px;
  display: block;
  margin: 0 auto;
  position: relative;
  top:3px;
}
.txtIcon{
  font-size: 12px;
  position: relative;
  bottom:3px;
  color: #707070;
}
.menuIcon{
  display: inline-block;
  margin:2px 10px 0 10px;
  text-align: center;
}
.addCart{
  text-align: center;
  color: white;
  background-color: rgb(233, 89, 5);
  display: block;
  width: 30%;
  height: 50px;
  float: right;
  padding:13px 0;
}
.txtbuyNow{
  font-size: 15px;
}
.buyNow{
  text-align: center;
  color: white;
  background-color: rgb(218, 26, 26);
  display: block;
  width: 30%;
  height: 50px;
  float: right;
  padding:13px 0;
}
.txtAddCart{
  font-size: 15px;
}
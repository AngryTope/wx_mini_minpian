.page{
  background-color: #eee;
  padding-bottom: 20px;
}
/*顶部图片*/
.headerImgView{
  padding:0;
  margin: 0;
}
#headerImg{
  width: 100%;
  height: 100px;
}
/*滑动条*/
.scrollView{
  display: flex;
  white-space: nowrap;
}
.on{
  color:crimson;
  border-bottom: crimson solid 1px;
}
.swiperTabList{
  box-sizing: border-box;
  font-size:15px;
  display: inline-block;
  margin: 5px;
  margin-right: 15px;
  margin-bottom: 0;
  padding-bottom: 5px;
}
/*商品*/
.goodList{
  background-color: #eee;
}
.liner{
  height: 20px;
  width: 50%;
  margin:auto;
  border-bottom: 1px solid orangered;
}
.goodView{
  width: 46%;
  height: 250px;
  margin: 5px 2%;
  display: inline-block;
  border-radius: 5px;
  overflow: hidden;
  background-color: white;
  box-shadow: 0px 1px 5px #b8b5b5;
  position: relative;
}
.goodImg{
  width: 100%;
  height: 170px;
}
.goodName{
  font-size: 14px;
  display: block;
  margin-left: 5px;
}
.goodPrice{
  text-decoration: line-through;
  color:rgb(120, 120, 120);
  font-size: 12px;
  display: block;
  margin-left: 5px;
  margin-top: 5px;
  margin-bottom: 0px;
}
.goodDiscountPrice{
  font-size: 14px;
  color:rgb(255, 0, 0);
  display: inline-block;
  margin-left: 5px;
  position: absolute;
  bottom: 6px;
  left: 0;
}
.salesVolume{
  font-size: 12px;
  color:rgb(120, 120, 120);
  display: inline-block;
  position: absolute;
  bottom: 6px;
  right: 8px;
}
/*悬浮按钮*/
.fixedMenu{
  position: fixed;
  right: 20px;
  top:400px;
  font-size: 10px;
  text-align: center;
  color: #707070;
}
.cart{
  width: 60px;
  height: 60px;
  border-radius: 30px;
  background-color: rgb(245, 245, 245);
}
.cartImg{
  width: 30px;
  height: 30px;
  display: block;
  margin: auto;
  position: relative;
  right: 1px;
  top: 9px;
}
.txtCart{
  position: relative;
  top:6px;
}
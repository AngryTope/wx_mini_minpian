page{
  background-color: #eee;
}
/*收货地址*/
.address{
  width: 100%;
  height: 90rpx;
  background-color: white;
  position: relative;
  padding: 20rpx 0;
}
.address-name{
  font-size: 28rpx;
  margin-left: 60rpx;
}
.address-phone{
  font-size: 28rpx;
  margin-left: 60rpx;
}
.address-detail{
  font-size: 24rpx;
  color: #5e5c5c;
  margin-left: 60rpx;
}
.address-rightArrow{
  width: 40rpx;
  position: absolute;
  right:20rpx;
  top:46rpx;
}
.address-local{
  width: 40rpx;
  position: absolute;
  left:16rpx;
  top:28rpx;
}
/*无收货地址*/
.no-address{
  width: 100%;
  height: 50rpx;
  background-color: white;
  position: relative;
  padding: 20rpx 0;
}
.txt-no-address{
  font-size: 28rpx;
    margin-left: 60rpx;
}
.no-address-rightArrow{
  width: 40rpx;
  position: absolute;
  right:20rpx;
  top:22rpx;
}
.no-address-local{
  width: 40rpx;
  position: absolute;
  left:16rpx;
  top:28rpx;
}
/*订单列表*/
.orders-box{
  margin-top:20rpx;
  width: 100%;
}
.goodView{
  width: 100%;
  height: 240rpx;
  background-color: white;
  position: relative;
  margin: 0;
}
.goodImg{
  width: 190rpx;
  height: 190rpx;
  position: relative;
  top:28rpx;
  left:26rpx;
}
.goodName{
  font-size: 28rpx;
  position: absolute;
  top:28rpx;
  left:240rpx;
}
.goodDiscountPrice{
  font-size: 30rpx;
  color: red;
  position: relative;
  left:48rpx;
}
.goodCount{
  display: inline-block;
  width: 190rpx;
  border:2rpx solid #eee;
  position: absolute;
  right:36rpx;
  bottom: 28rpx;
  font-size: 24rpx;
}
.decrease{
  display: inline-block;
  width: 56rpx;
  height: 36rpx;
  text-align: center;
}
.goodCountInput{
  display: inline-block;
  width: 74rpx;
  height: 36rpx;
  overflow:visible;
  border-left:2rpx solid #eee;
  border-right:2rpx solid #eee;
  text-align: center;
}
.increase{
  display: inline-block;
  width: 56rpx;
  height: 36rpx;
  text-align: center;
}
/*订单信息*/
.order-info{
  background-color: white;
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx;
}
.userMsg{
  margin: 10rpx 0;
}
.txtUserMsg{
  width: 20%;
  position: relative;
  bottom:14rpx;
}
.InputUserMsg{
  display: inline-block;
  width: 78%;
  margin-left: 2%;
}
.goodsPrice{
  margin: 10rpx 0;
  position: relative;
}
.txtGoodsPrice{
  width: 20%;
}
.money{
  position: absolute;
  right: 5%;
  color: #707070;
}
.goodsfreight{
  margin: 10rpx 0;
    position: relative;
}
.txtGoodsFreight{
  width: 20%;
}
/*底部支付菜单*/
.fixedBar{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom:0;
  left:0;
  background-color: white;
  z-index: 10;
}
.pay{
  background-color: red;
  color: white;
  text-align: center;
  width: 180rpx;
  height: 100rpx;
  float: right;
  line-height: 100rpx;
  margin-left: 30rpx;
}
.txtPay{
  line-height: 50rpx;
  font-size: 32rpx;
}
.totalPriceView{
  float: right;
  line-height: 100rpx;
}
.count{
  line-height: 50rpx;
  font-size: 32rpx;
}
.totalPrice{
  color: red;
  font-size: 36rpx;
}




